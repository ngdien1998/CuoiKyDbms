<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quản lý nhà hàng</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Quản lý nhà hàng</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                @Html.ActionLink("Trang chủ", "Index", null, new { @class = "nav-item nav-link nav-link active" })
                @Html.ActionLink("Loại món ăn", "Index", "LoaiMonAns", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Món ăn", "Index", "MonAns", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Thực đơn", "Index", "ThucDons", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Người dùng", "Index", "NguoiDungs", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Nhân viên", "Index", "NhanViens", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Loại bài viết", "Index", "LoaiBaiViets", null, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Bài viết", "Index", "BaiViets", null, new { @class = "nav-item nav-link" })
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Quản lý nhà hàng</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>